<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <h2 class="text-center">アカウント新規登録</h2><hr>
    </div>
  </div>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="row">
  <div class="col-xs-3 col-md-3"></div>
  <div class="col-xs-6 col-md-6">
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, class:"form-control" %>
    </div>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :新しいパスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上を入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :新しいパスワード再入力 %><br />
      <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %><br>
    </div>
  
    <div class="actions">
      <%= f.submit "登録", class:"btn btn-success" %>
    </div>
<% end %>
  </div>
  <div class="col-md-3 col-xs-3"></div>
  </div>
</div>


<%= render "devise/shared/links" %>