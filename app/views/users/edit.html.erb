<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <h2 class="text-center">プロフィール編集</h2><hr>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-3 col-md-3"></div>
    <div class="col-xs-6 col-md-6">
      <%= form_with model:@user, local:true do |f| %>
        <div class="field">
          <%= f.label :名前 %>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"太郎", class:"form-control" %><br>
        </div>
        <div class="field">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"例：オススメを紹介します", class:"form-control" %><br>
        </div>
        <%= f.submit "保存", class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-xs-3 col-md-3"></div>
  </div>
</div>
