<table class="user-table">
  <thead>
    <tr>
      <th>動画投稿者名</th>
      <th>レビュー内容</th>
      <th>ユーザーネーム</th>
      <th>コメント数</th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.user.name %></td>
      <td><%= link_to "#{article.comments.count} コメント", article_path(article.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate articles %>

