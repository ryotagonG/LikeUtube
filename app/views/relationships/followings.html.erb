<h2>フォロー一覧</h2>
<table>
<% if @users.exists? %>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
    </tr>
  </thead>
<% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
        </td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
      </tr>
    </tbody>
<% end %>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>