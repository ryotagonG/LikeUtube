<% if article.favorited_by?(current_user) %>
    <p>
      <%= link_to article_favorites_path(article), method: :delete, remote: true do %>
        ♥<%= article.favorites.count %> いいね
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to article_favorites_path(article), method: :post, remote: true do %>
        ♡<%= article.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>